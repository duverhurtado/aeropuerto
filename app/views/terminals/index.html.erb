<p id="notice"><%= notice %></p>

<h1>Listing Terminals</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Ciudad</th>
      <th>Pais</th>
      <th>Numpista</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @terminals.each do |terminal| %>
      <tr>
        <td><%= terminal.nombre %></td>
        <td><%= terminal.direccion %></td>
        <td><%= terminal.ciudad %></td>
        <td><%= terminal.pais %></td>
        <td><%= terminal.numpista %></td>
        <td><%= terminal.telefono %></td>
        <td><%= link_to 'Show', terminal %></td>
        <td><%= link_to 'Edit', edit_terminal_path(terminal) %></td>
        <td><%= link_to 'Destroy', terminal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

